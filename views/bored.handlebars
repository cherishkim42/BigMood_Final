<div class="card text-center jumbotron">
  <div class="card-header h3">
    I'm Feeling {{resource.mood}}
  </div>
  <div class="card-body">
    <h5 class="card-title h2">{{resource.resource}}</h5>

    <a href={{resource.link}} class="card-link h4">Take Me</a>
  </div>
  <div class="card-footer text-muted">
    {{#if currentUser}}
    <p class="card-link">
      <form action="/user/favorites" method="get">
        <div><button type='submit' class='card-link h6 '>Save To Favorites</button></div>
      </form>
    </p>
    {{else}}
    <p class="card-link">
      <form action="/loginError" method="">
        <div><button type='submit' class='card-link h6 '>Save To Favorites</button></div>
      </form>
    </p>
    {{/if}}
  </div>
  <div>
    <button class='card-link'><a href="/bored">Refresh</a></button>
  </div>
</div>